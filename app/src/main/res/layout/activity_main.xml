<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtNameBig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="Atta Geledeg"
        android:textSize="15pt"
        android:textColor="@android:color/black"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:text="Nama"
        android:textSize="8pt" />

    <EditText
        android:id="@+id/edtTxtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Input your name"
        android:textColor="@android:color/black"
        android:textSize="8pt"/>

    <TextView
        android:id="@+id/txtAlamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:text="Alamat"
        android:textSize="8pt" />

    <EditText
        android:id="@+id/edtTxtAlamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Input your address"
        android:textColor="@android:color/black"
        android:textSize="8pt"/>

    <TextView
        android:id="@+id/txtKampus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:text="Kampus"
        android:textSize="8pt" />

    <EditText
        android:id="@+id/edtTxtKampus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Input your campus"
        android:textColor="@android:color/black"
        android:textSize="8pt"/>

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center" >

        <ImageView
            android:id="@+id/imgPain1"
            android:layout_width="90dp"
            android:layout_height="175dp"
            android:src="@drawable/atta" />

        <ImageView
            android:id="@+id/imgPain2"
            android:layout_width="90dp"
            android:layout_height="175dp"
            android:layout_marginHorizontal="15dp"
            android:src="@drawable/atta" />

        <ImageView
            android:id="@+id/imgPain3"
            android:layout_width="90dp"
            android:layout_height="175dp"
            android:src="@drawable/atta" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center" >

        <Button
            android:id="@+id/btnKembali"
            android:onClick="onKembaliBtnClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="KEMBALI"
            android:textSize="8pt" />

        <Button
            android:id="@+id/btnNext"
            android:onClick="onNextBtnClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="NEXT"
            android:textSize="8pt" />

    </LinearLayout>

</LinearLayout>